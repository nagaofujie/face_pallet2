<h2 class="text-center mt-5"><%= @customer.full_name %>さんの会員詳細</h2>
    <table class="table mt-5">
        <tr>
            <th></th>
            <th><%= image_tag @customer.get_image(200,200)%></th>
            <th></th>
        </tr>
        <tr>
            <th>会員ID</th>
            <td><%= @customer.id%></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
        </tr>
        <tr>
            <th>会員ステータス</th>
            <td><% if @customer.is_deleted == false  %>
                <p class="text-success">有効</p>
                <% else %>
                 <p class="text-danger">退会</p>
                 <% end %>
            </td>
        </tr>
    </table>
    <h4 class="text-center mt-5 mb-5">コメント一覧</h4>
        <table class="table">
            <tr>
                <th>投稿日</th>
                <th>投稿のタイトル</th>
                <th>コメント内容</th>
                <th></th>
            </tr>
        <% @comments.each do |comment| %>
            <tr>
                <td><%= comment.created_at %></td>
                <td><%= link_to admin_post_path(comment.post.id) do %>
                        <%= comment.post.title %>
                    <% end %>
                </td>
                <td><%= comment.comment_content %></td>
                <td></td>
            </tr>
        <% end %>
            <%= paginate @comments %>
        </table>
