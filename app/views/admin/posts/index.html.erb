<h2 class="text-center mt-5">投稿一覧</h2>
    <table class="table text-center ml-5 pl-5">
        <tr>
            <th>ポストID</th>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>内容</th>
        </tr>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.id %></td>
                <td><%= image_tag post.customer.get_image(300,300) %><br>
                <%= link_to post.customer.full_name, admin_customer_path(post.customer.id) %></td>
                <td><%= link_to post.title, admin_post_path(post.id) %></td>
                <td><%= post.introduction %></td>
            </tr>
        <% end %>
      <%= paginate @posts %>
    </table>