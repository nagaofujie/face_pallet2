<div class="container">
  <div class="row d-block">
      <h2 class="mt-5 mb-5 text-center mr-5">Sign up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <div class="field mb-5">
            <strong><%= f.label "full name", class: "mr-3mt-5" %></strong>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", size: "30x5", class: "mr-3" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", size: "30x5" %>
          </div>
          <div class="field mb-5">
            <strong><%= f.label :email , class: "mr-3"%></strong>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30x5" %>
          </div>

          <div class="field mb-5">
            <strong><%= f.label :password , class: "mr-3"%></strong>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
                <%= f.password_field :password, autocomplete: "new-password", size: "30x5", class: "ml-3" %>
          </div>
          <div class="field">
            <strong><%= f.label :confirmation, class: "mr-3" %></strong>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "30x5" %>
          </div>
        ã€€<div class="col-md-8 offset-md-4 mt-5 ">
            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-success ml-5 mb-5" %>
            </div>
              <% end %>
          </div>

          <div class="text-center mt-5 ">
             <h5>Click here for members<%= render "public/shared/links" %></h5>
          </div>
  </div>
</div>


