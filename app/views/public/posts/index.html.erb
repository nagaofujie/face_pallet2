<div class="container">
    <div class="row">
        <% if !@result_posts.nil? %>
            <div class="col-md-12">
                <h2 class="mb-5 mt-5"><strong>Search Results</strong></h2>
            </div>
                <% @result_posts.each do |post| %>
                  <div class="col-md-2">
                    <%= image_tag post.get_image(200,200) %><br>
                    <strong><%= link_to post.title, post_path(post.id) %></strong>
                  </div>
                <% end %>

        <% else %>
            <div class="col-md-4 mt-5 ">
                <strong><h1 class="text-info mb-5"><i class="fas fa-tag"></i>Tags</h1></strong>
                    <% @tag_list.each do |list|%>
                        <h2 class="text-secondary"><i class="fas fa-hashtag"></i><%= link_to list.name, search_tag_path(tag_id: list.id) %>
                            <%="(#{list.posts.count})" %>
                        </h2>
                    <% end %>
            </div>
            <div class="col-md-8 mt-5">
                <strong><h1 class="text-info">Everyone's post</h1></strong>
                    <% @posts.each do |post| %>
                        <div class="row">
                            <%= link_to post_path(post.id) do %>
                                <div class="col-md-5 mt-5">
                                <div class="col-md-12 mt-5"><%= image_tag post.get_image(200,200) %></div>
                                </div>
                            <% end %>

                                <div class="col-md-7 mt-5">
                                    <div class="col-md-12 mt-5"><strong>title:　</strong><%= post.title %></div>
                                    <div class="col-md-12 mt-5"><strong>introduction:　</strong><%= post.introduction %></div>
                                </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 mt-5 ml-3"><i class="fas fa-user"></i> <%= post.customer.full_name %></div>
                            <div class="col-md-2 mt-5"><i class="fas fa-comment"></i> <%= "(#{post.comments.count})" %></div>
                            <div class="col-md-2 mt-5"><i class="fas fa-heart"></i> <%= "(#{post.favorites.count})" %></div>
                        </div>
                    <% end %>
            <%= paginate @posts %>
            </div>
        <% end %>
    </div>
</div>
