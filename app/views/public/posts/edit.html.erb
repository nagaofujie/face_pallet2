<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-4 mt-5 ">

<strong><h1>Let's post makeup</h1></strong>

<%= form_with model: @post, url: posts_path do |f| %>

<div class="form-group" >
<strong><%= f.label "Image" %></strong>
<%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group" >
<strong><%= f.label "Make Name" %></strong>
<%= f.text_field :title %>
</div>

<div class="form-group" >
<strong><%= f.label "introduction" %></strong>
<%= f.text_area :introduction %>
</div>

<div class="form-group" >
<strong><%= f.label "tags" %></strong>
<%= text_field_tag :tag_list  %>
</div>
<%= f.submit "Update Make Up", class: "btn btn-secondary"%>

<% end %>
    </div>
  </div>
</div>

