      .container{ background-image: url("<%= asset_path('IMG_4444.PNG') %>");
        background-size:cover;
        background-position: center;
        background-color:rgba(255,255,255,0.5);
        background-blend-mode:lighten;
        width:780px;
        height:1080px;
       }
