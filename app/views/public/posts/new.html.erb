<div class="container">
  <div class="row  justify-content-center">
    <div class="col-md-12 mt-5">
      <h1 class="mb-5 text-center">Let's post makeup</h1>
        <%= form_with model: @post, url: posts_path do |f| %>
          <div class="form-group mb-5" >
            <strong><%= f.label "Image" %></strong>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="form-group mb-5" >
            <strong><%= f.label "Make Name" %></strong>
            <%= f.text_field :title, size: "50x5" %>
          </div>
          <div class="form-group mb-5" >
            <strong><%= f.label "introduction" %></strong>
            <%= f.text_area :introduction, size: "50x5" %>
          </div>
          <div class="form-group mb-3" >
            <strong><%= f.label "tags" %></strong>
            <%= text_field_tag :name %><br>
            <h6 class="ml-5 pl-5">Multiple possible(half-width space)</h6>
          </div>
          <%= f.submit "Create Make Up", class: "btn btn-secondary offset-md-4 mt-5 mb-5"%>
        <% end %>
    </div>
  </div>
</div>

