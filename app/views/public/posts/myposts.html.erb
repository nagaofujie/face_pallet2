<div class="container">
    <div class="row">
        <div class="col-md-4 mt-5">
                <% if @customer.email != 'guest@example.com' && @customer == current_customer %>
                    <%= link_to "Edit",edit_customer_path(@customer.id), class: "btn btn-success" %>
                <% else %>
                    <div></div>
                <% end %>
                <%= image_tag @customer.get_image(250,250), class: "rounded-circle" %>
                    <h2 class="mt-5 mb-5 text-secondary"><i class="fas fa-user"></i> <strong><%= @customer.full_name %></strong></h2>
        </div>
            <div class="col-md-8">
                <h2 class="text-center mt-5 text-secondary mb-5"><i class="fas fa-star-and-crescent"></i> <strong>My Posts<strong></h2>
                    <div class="d-flex">
                    <% @posts.each do |post| %>
                        <div class="col-md-3 offset-md-1 align-items-stretch text-secondary mt-3 ">
                            <%= link_to post_path(post.id) do %>
                                <%= image_tag post.get_image(200,200) %>
                            <% end %><br>
                            <i class="fas fa-long-arrow-alt-right"></i><%= post.title %>
                        </div>
                    <% end %>
                    </div>
            </div>
    </div>
</div>