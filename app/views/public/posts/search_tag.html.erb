<div class="container">
<h5>タグが<%=@tag.name%>の投稿一覧</h5>

<% @tag_list.each do |list|%>
<h4><%=link_to list.name,search_tag_path(tag_id: list.id) %>
<%="(#{list.posts.count})" %></h4><% end %>
<% @posts.each do |post| %>
<div class="card">
  <div class="card-body">
    <h6 class="card-title">
      <%= link_to post_path(post.id) do%>
        <%= image_tag post.get_image(200,100) %>
      <% end %>
        <h4><%=link_to post_path(post.id) do %><%= post.title.truncate(25) %></h4>
      <% end %>
    </h6>



  </div>
</div>
<% end %>

<div class="pagination pagination-sm justify-content-center">
       <%= paginate @posts %></div>

</div>


<style>
.card{
  padding:0;
  margin:0;
  border:none;
  
}


 
 .container{ background-image: url("<%= asset_path('IMG_4450.PNG') %>");　
  background-size:cover;
  background-position: center;
  background-color:rgba(255,255,255,0.5);
  background-blend-mode:lighten;
  width:auto;
  height:auto;
 }




h6 {
  /*線の種類（実線） 太さ 色*/
  border-bottom: solid 3px black;
}
</style>